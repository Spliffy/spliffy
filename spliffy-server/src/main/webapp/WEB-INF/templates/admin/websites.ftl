<#import "defaultLayout.ftl" as layout>
<@layout.myLayout "Manage websites" "websiteAdmin">
<h1>Manage websites for ${page.organisation.name}</h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Theme</th>
        </tr>        
    </thead>
    <tbody>
        <#list page.websites as w>
        <tr>
            <td><a href="http://${w.name}/">${w.name}</a></td>
            <td>${w.theme!}</td>
        </tr>
        </#list>
    </tbody>
</table>
</@layout.myLayout>