<#import "defaultLayout.ftl" as layout>
<@layout.myLayout "Contacts" "contacts">

<h1>Address book - ${page.name}</h1>
<div class="breadcrumbs">
<@layout.breadCrumbs node=page path="."/>
</div>
<!--
<button class="add" onclick="showAddContact()">Add</button>
-->
<table class="data">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>organisation</th>
        </tr>
    </thead>
    <tbody>
        <#list page.children as x>
        <tr>
            <td>${x.formattedName}</td> 
            <td>${x.email!}</td>
            <td>${x.telephone!}</td>
            <td>${x.organisation!}</td>
        </tr>
        </#list>  
    </tbody>
</table>
      

</@layout.myLayout>